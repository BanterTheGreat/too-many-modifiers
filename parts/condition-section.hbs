<section
  class="tab tmm-tab-conditions {{tab.cssClass}}"
  data-group="primary"
  data-tab="conditions"
>
  <div style="margin-bottom: 15px; display: flex; gap: 10px;">
    <div style="width: 100%;">
      <label>Condition:</label>
      <select id="condition" name="condition" style="width: 100%; padding: 5px;">
        <option value="">Select condition...</option>
        {{#each conditions as |opt|}}
        <option value="{{opt.value}}">{{opt.label}}</option>
        {{/each}}
      </select>
    </div>
  </div>
</section>