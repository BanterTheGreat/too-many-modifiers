<section
  class="tab tmm-tab-resistances {{tab.cssClass}}"
  data-group="primary"
  data-tab="resistances"
>
  <div style="margin-bottom: 15px; display: flex; gap: 10px;">
    <div style="width: 50%;">
      <label>Type:</label>
      <select id="resistanceType" style="width: 100%; padding: 5px;">
        <option value="">Select type...</option>
        {{#each damageTypeOptions as |opt|}}
        <option value="{{opt.value}}">{{opt.label}}</option>
        {{/each}}
      </select>
    </div>
    <div style="width: 50%;">
      <label>Value:</label>
      <input type="number" id="resistanceValue" style="width: 100%; padding: 5px;" placeholder="Enter value">
    </div>
  </div>
</section>